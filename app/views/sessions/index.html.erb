<% provide(:title, "Log in") %>

<div class="container">
	<div class="col-sm-push-4 col-sm-4">
    <% if flash[:color]== "valid" %>
        <div class="valid_notice">
          <p><%= flash[:notice]%></p>
        </div>
    <% elsif flash[:color]== "invalid"%>
        <div class="invalid_notice">
          <p><%=flash[:notice]%></p>
        </div>
    <%else%>
        <div class="notice">
          <p><%=flash[:notice]%></p>
        </div>
  		<%end%>
		<h3 class="text-center">Log in</h3>
		<%= form_for(:session, url: login_path, class:'form-horizontal') do |f| %>

		<div class="form-group">
			<%= f.label :name, class: 'control-label' %>
			<%= f.text_field :username_or_email,id:"username_or_email", class: 'form-control' %>
		</div>

		<div class="form-group">
			<%= f.label :password, class: ' control-label' %>
			<%= f.password_field :login_password,id:'login_password', class: 'form-control' %>
		</div>

		<div class="form-group">
			<div class="checkbox">
				<input type="checkbox" name="rememberme" id="rememberme">
				Remember Me
			</div>
		</div>

		<div>
			<%= f.submit "Log in", class: "btn btn-primary" %>
		</div>
		<% end %>
		<br>
		<p>
			New user? <%= link_to "Sign up now!", signup_signup_path %>
		</p>
	</div>
</div>